@model IEnumerable<IKSnet.Models.Risiko>

@{
    ViewBag.Title = "Risiko";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h4>Risiko</h4>
    </div>

    <div class="panel-body">
        <p>
            @Html.ActionLink("Neues Risiko erfassen", "Create")
        </p>
        <table class="table table-hover">
            <thead class="thead-light">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Titel)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Risikobeschreibung)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Prozessaktivitaet.ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Risikokategorie.ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Eintrittswahrscheinlichkeit)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Schadenausmass)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bewertung)
                    </th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                string riskcell = "";
                if (item.Bewertung < 6)
                    {
                        riskcell = "success";
                    }
                    else if(item.Bewertung < 9)
                    {
                        riskcell = "warning";
                    }
                    else if(item.Bewertung > 8)
                    {
                        riskcell = "danger";
                    }
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Risikobeschreibung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prozessaktivitaet.Titel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Risikokategorie.Bezeichnung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Eintrittswahrscheinlichkeit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Schadenausmass)
            </td>
            <td class="@riskcell">
                @Html.DisplayFor(modelItem => item.Bewertung)
            </td>
            <td>
                @Html.ActionLink("Mutieren", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Löschen", "Delete", new { id = item.ID })
            </td>
        </tr>
            }

        </table>
    </div>
</div>