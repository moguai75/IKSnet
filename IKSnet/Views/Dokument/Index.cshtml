@model IEnumerable<IKSnet.Models.Dokument>

@{
    ViewBag.Title = "Dokument";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h4>Dokument</h4>
    </div>

    <div class="panel-body">
        <p>
            @Html.ActionLink("Neues Dokument hinzufügen", "Create")
        </p>
        <table class="table table-hover">
            <thead class="thead-light">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Titel)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Beschreibung)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GueltigAb)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GueltigBis)
                    </th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        <a href="@Url.Action("Show", "Dokument", new { id = item.ID })">@Html.DisplayFor(modelItem => item.Titel)</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Beschreibung)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GueltigAb)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GueltigBis)
                    </td>
                    <td>
                        @Html.ActionLink("Mutieren", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
